<% cache [I18n.locale, current_user, cache_key_for_all(Dislike)] do %>
<div class="email-content-body">
  <h1>Listing Dislikes</h1>

  <table class="pure-table pure-table-horizontal">
    <thead>
      <tr>
          <th>Dislikeable</th>
          <th>User</th>
          <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @dislikes.each do |dislike| %>
        <tr>
            <td><%= dislike.dislikeable %></td>
            <td><%= dislike.user %></td>
            <td><%= link_to 'Show', dislike, class: policy(dislike).show? ? 'pure-button':'pure-button pure-button-disabled' %></td>
          <td><%= link_to 'Edit', edit_dislike_path(dislike), class: policy(dislike).edit? ? 'pure-button':'pure-button pure-button-disabled' %></td>
          <td><%= link_to 'Destroy', dislike, method: :delete, data: { confirm: 'Are you sure?' }, class: policy(dislike).destroy? ? 'pure-button':'pure-button pure-button-disabled' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Dislike', new_dislike_path, class: policy(Dislike.new).new? ? 'pure-button':'pure-button pure-button-disabled' %>
</div>
<% end %>
