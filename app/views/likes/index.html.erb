<% cache [I18n.locale, current_user, cache_key_for_all(Like)] do %>
<div class="email-content-body">
  <h1>Listing Likes</h1>

  <table class="pure-table pure-table-horizontal">
    <thead>
      <tr>
          <th>Likeable</th>
          <th>User</th>
          <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @likes.each do |like| %>
        <tr>
            <td><%= like.likeable %></td>
            <td><%= like.user %></td>
            <td><%= link_to 'Show', like, class: policy(like).show? ? 'pure-button':'pure-button pure-button-disabled' %></td>
          <td><%= link_to 'Edit', edit_like_path(like), class: policy(like).edit? ? 'pure-button':'pure-button pure-button-disabled' %></td>
          <td><%= link_to 'Destroy', like, method: :delete, data: { confirm: 'Are you sure?' }, class: policy(like).destroy? ? 'pure-button':'pure-button pure-button-disabled' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Like', new_like_path, class: policy(Like.new).new? ? 'pure-button':'pure-button pure-button-disabled' %>
</div>
<% end %>
